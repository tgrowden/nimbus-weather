{
	"javascript.validate.enable": false,
	"flow.useNPMPackagedFlow": true,
	"search.exclude": {
		".git": true,
		".eslintcache": true,
		"app/dist": true,
		"app/main.prod.js": true,
		"app/main.prod.js.map": true,
		"bower_components": true,
		"dll": true,
		"flow-typed": true,
		"release": true,
		"node_modules": true,
		"npm-debug.log.*": true,
		"test/**/__snapshots__": true,
		"yarn.lock": true
  },
  "prettier.eslintIntegration": true,
  "eslint.packageManager": "yarn",
  "eslint.options": {
    "cache": "true"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/flow-typed/npm/**": true,
    "**/nimbus-weather-webapp/dev/**": true,
    "**/dist/**": true,
    "**/docs/**": true,
    "**/.cache/**": true
  }
}
